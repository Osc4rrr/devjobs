<main class="contenedor">
    <form action="/editar-perfil" method="POST" class="default-form" enctype="multipart/form-data">
        <div class="campo">
            <label for="">Nombre</label>
            <input  type="text" name="nombre" placeholder="Tu nombre" value="{{usuario.nombre}}" required>
        </div>

        <div class="campo">
            <label for="">Email</label>
            <input type="email" name="email" placeholder="Tu email" value="{{usuario.email}}" required >
        </div>

        <div class="campo">
            <label for="">Password</label>
            <input type="password" name="password" placeholder="Tu password">
        </div>

        <div class="campo">
            <label for="">Imagen</label>
            <input type="file" name="imagen" placeholder="Tu imagen de perfil">

            <img src="uploads/perfiles/{{usuario.imagen}}" alt="" class="admin-perfil">
        </div>

        <div class="campo">
            <input type="submit" class="btn btn-azul" value="Guardar Cambios">
        </div>
    </form>
</main>